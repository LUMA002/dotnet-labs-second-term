@model IEnumerable<Labs.Application.DTOs.Response.PassengerResponseDto>

@{
    ViewData["Title"] = "Passengers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-people-fill"></i> Passengers
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Passenger
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No passengers found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var passenger in Model)
                    {
                        <tr>
                            <td>
                                <strong>@passenger.LastName @passenger.FirstName</strong>
                                @if (!string.IsNullOrEmpty(passenger.MiddleName))
                                {
                                    <br />
                        
                                    <small class="text-muted">@passenger.MiddleName</small>
                                }
                            </td>
                            <td>@(passenger.PhoneNumber ?? "N/A")</td>
                            <td>@(passenger.Address ?? "N/A")</td>
                            <td class="text-end">
                                <fieldset class="btn-group">
                                    <a asp-action="Details" asp-route-id="@passenger.Id"
                                       class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@passenger.Id"
                                       class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@passenger.Id"
                                       class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </fieldset>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>