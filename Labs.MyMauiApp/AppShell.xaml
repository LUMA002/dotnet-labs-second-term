<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:tickets="clr-namespace:Labs.MyMauiApp.Pages.Tickets"
       xmlns:passengers="clr-namespace:Labs.MyMauiApp.Pages.Passengers"
       x:Class="Labs.MyMauiApp.AppShell"
       FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Tickets"
                      Route="tickets"
                      ContentTemplate="{DataTemplate tickets:TicketsPage}" />

        <ShellContent Title="Passengers"
                      Route="passengers"
                      ContentTemplate="{DataTemplate passengers:PassengersPage}" />
    </TabBar>
</Shell>