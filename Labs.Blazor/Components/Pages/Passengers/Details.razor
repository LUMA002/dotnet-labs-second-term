@page "/passengers/details/{id:guid}"
@inject IPassengerService PassengerService
@inject NavigationManager Navigation


<PageTitle>Passenger Details</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
               
                    <h2 class="mb-0">
                        <i class="bi bi-person-circle"></i> Passenger Details
                    </h2>
                </div>
                <div class="card-body">
                    @if (passenger == null)
                    {
                        <div class="text-center p-5">
                            <div class="spinner-border text-info"></div>
                        </div>
                    }
                    else
                    {
                        <dl class="row">
                            <dt class="col-sm-3">ID:</dt>
                            <dd class="col-sm-9"><code>@passenger.Id</code></dd>

                            <dt class="col-sm-3">First Name:</dt>
                            <dd class="col-sm-9">@passenger.FirstName</dd>

                            <dt class="col-sm-3">Last Name:</dt>
                            <dd class="col-sm-9">@passenger.LastName</dd>

                            <dt class="col-sm-3">Middle Name:</dt>
                            <dd class="col-sm-9">
                                @if (!string.IsNullOrEmpty(passenger.MiddleName))
                                {
                                    @passenger.MiddleName
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>

                            <dt class="col-sm-3">Phone Number:</dt>
                            <dd class="col-sm-9">
                                @if (!string.IsNullOrEmpty(passenger.PhoneNumber))
                                {
                                    <i class="bi bi-telephone"></i> 
                                    @passenger.PhoneNumber
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>

                            <dt class="col-sm-3">Address:</dt>
                            <dd class="col-sm-9">
                                @if (!string.IsNullOrEmpty(passenger.Address))
                                {
                                    <i class="bi bi-house"></i> 
                                    @passenger.Address
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>
                        </dl>

                        <hr />

                        <div class="d-flex justify-content-between mt-4">
                            <a href="/passengers" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <div>
                                <a href="/passengers/edit/@passenger.Id" class="btn btn-warning me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="/passengers/delete/@passenger.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Guid Id { get; set; }
    private PassengerResponseDto? passenger;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            passenger = await PassengerService.GetPassengerByIdAsync(Id);
            if (passenger == null)
            {
                Navigation.NavigateTo("/passengers?error=Passenger not found");
            }
        }
        catch
        {
            Navigation.NavigateTo("/passengers?error=Error loading passenger");
        }
    }
}