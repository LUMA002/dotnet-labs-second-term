@page "/passengers"
@inject IPassengerService PassengerService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Passengers</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="bi bi-people"></i> Passengers</h1>
        <a href="/passengers/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Passenger
        </a>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @successMessage
            <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
        </div>
    }

    @if (passengers == null)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!passengers.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No passengers found.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var passenger in passengers)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-person-circle"></i>
                                        @passenger.LastName @passenger.FirstName @passenger.MiddleName
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(passenger.PhoneNumber))
                                        {
                                            <i class="bi bi-telephone"></i>
                                            @passenger.PhoneNumber
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(passenger.Address))
                                        {
                                            <i class="bi bi-geo-alt"></i>
                                            @passenger.Address
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a href="/passengers/details/@passenger.Id" class="btn btn-sm btn-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/passengers/edit/@passenger.Id" class="btn btn-sm btn-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="/passengers/delete/@passenger.Id" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<PassengerResponseDto>? passengers;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadPassengersAsync();

        // check for TempData (actually dictionary) messages by parsing query string (smth like /passengers?success={someMsg})
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        
        if (query["success"] != null)
        {
            successMessage = query["success"];
        }
        
        if (query["error"] != null)
        {
            errorMessage = query["error"];
        }
    }

    private async Task LoadPassengersAsync()
    {
        try
        {
            var result = await PassengerService.GetAllPassengersAsync();
            passengers = result.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading passengers: " + ex.Message;
            passengers = new List<PassengerResponseDto>();
        }
    }
}